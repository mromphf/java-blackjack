<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" vgap="50">
    <GridPane GridPane.rowIndex="0" GridPane.columnIndex="0" vgap="20">
        <Label fx:id="lblBet" GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="250" minHeight="50" alignment="BASELINE_CENTER">
            Bet: $0
        </Label>

        <Label GridPane.rowIndex="1" GridPane.columnIndex="0" minWidth="100" alignment="BASELINE_CENTER">
            Right-click to decrease.
        </Label>
    </GridPane>

    <GridPane GridPane.rowIndex="1" GridPane.columnIndex="0" hgap="10">
        <Button fx:id="btnBet1" GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="50" minHeight="50">
            1
        </Button>

        <Button fx:id="btnBet5" GridPane.rowIndex="0" GridPane.columnIndex="1" minWidth="50" minHeight="50">
            5
        </Button>

        <Button fx:id="btnBet10" GridPane.rowIndex="0" GridPane.columnIndex="2" minWidth="50" minHeight="50">
            10
        </Button>

        <Button fx:id="btnBet25" GridPane.rowIndex="0" GridPane.columnIndex="3" minWidth="50" minHeight="50">
            25
        </Button>

        <Button fx:id="btnBet100" GridPane.rowIndex="0" GridPane.columnIndex="4" minWidth="50" minHeight="50">
            100
        </Button>
    </GridPane>

    <GridPane GridPane.rowIndex="2" GridPane.columnIndex="0" alignment="BASELINE_CENTER">
        <Button fx:id="btnDeal" GridPane.rowIndex="2" GridPane.columnIndex="0" minWidth="250" minHeight="50" disable="true">
            Deal
        </Button>
    </GridPane>
</GridPane>
