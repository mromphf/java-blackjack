<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import main.io.blackjack.TableDisplay?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="main.io.blackjack.BlackjackController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="5" vgap="50">
    <GridPane GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="BASELINE_CENTER">
        <Label fx:id="lblBet" GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="100">
            Bet: $0
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>

        <Label fx:id="lblCards" GridPane.rowIndex="0" GridPane.columnIndex="1" minWidth="100" alignment="CENTER_RIGHT">
            Cards Remaining: 0
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>
    </GridPane>

    <GridPane GridPane.rowIndex="1">
        <TableDisplay fx:id="tableDisplay"/>
    </GridPane>

    <GridPane fx:id="gameControls" GridPane.rowIndex="2" alignment="center" hgap="20" vgap="20">
        <Button fx:id="btnDouble" GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="100" minHeight="50" onAction="#onDouble">
            Double
        </Button>

        <Button GridPane.rowIndex="0" GridPane.columnIndex="1" minWidth="100" minHeight="50" onAction="#onHit">
            Hit
        </Button>

        <Button GridPane.rowIndex="0" GridPane.columnIndex="2" minWidth="100" minHeight="50" onAction="#onStand">
            Stand
        </Button>
    </GridPane>

    <GridPane visible="false" fx:id="splitControls" GridPane.rowIndex="2" alignment="center" hgap="20" vgap="20">
        <Button GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="100" minHeight="50" onAction="#onSplit">
            Split
        </Button>

        <Button GridPane.rowIndex="0" GridPane.columnIndex="1" minWidth="100" minHeight="50" onAction="#onNoSplit">
            Don't Split
        </Button>
    </GridPane>

    <GridPane visible="false" fx:id="settleControls" GridPane.rowIndex="2" alignment="center" hgap="20" vgap="20">
        <Button GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="100" minHeight="50" onAction="#onSettleNextHand">
            Settle Next Hand
        </Button>
    </GridPane>

    <GridPane visible="false" fx:id="gameOverControls" GridPane.rowIndex="2" alignment="center" hgap="20" vgap="20">
        <Button GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="100" minHeight="50" onAction="#onDone">
            Done
        </Button>
    </GridPane>

    <GridPane GridPane.rowIndex="3" GridPane.columnIndex="0" alignment="BASELINE_CENTER">
        <Label fx:id="lblBalance" GridPane.rowIndex="0" GridPane.columnIndex="0" minWidth="250" minHeight="50" alignment="BASELINE_CENTER">
            Balance: $0
            <font>
                <Font name="Arial" size="30" />
            </font>
        </Label>
    </GridPane>
</GridPane>
